<section id="resources" class="testimonials text-center">
  <div class="container text-left">
    <h3 class="title"><%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
                         @site.resource, :title,
                         :path => resource_path(@site.resource.id),
                         :sanitize => false,
                         :display_with => lambda { |resourceTitle| (resourceTitle).html_safe } %>
    </h3>

    <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
                         @site.resource, :content,
                         :type => :textarea,
                         :path => resource_path(@site.resource.id),
                         :sanitize => false,
                         :display_with => lambda { |resourceContent| (resourceContent).html_safe },
                         :html_attrs => { :style => 'width:100%;' }%>
  </div>
</section>