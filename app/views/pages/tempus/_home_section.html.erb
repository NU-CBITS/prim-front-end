<h1 class="site-slogan">
  <span>
    <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
       @site.home,
       :title,
       :path => home_path(@site.home.id),
       :sanitize => false,
       :display_with => lambda { |homeTitle| (homeTitle).html_safe } %>
  </span>
</h1>

<p class="app-description">
  <span>
    <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
     @site.home,
     :content,
     :type => :textarea,
     :path => home_path(@site.home.id),
     :sanitize => false,
     :display_with => lambda { |homeContent| (homeContent).html_safe },
     :html_attrs => { style: 'width:100%;' } %>
  </span><br>
</p>