<div class="contact">
  <div class="container">
    <div class="row-fluid">
      <div class="span12">
        <div class="testimonail wide-testimonial">
          <div class="testimonail-text">
            <blockquote class="text-left">
              <h5 class="title" style="text-align: left;">
                <a href="#">
                  <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
                                       @site.contact_us,
                                       :title,
                                       :path => contact_u_path(@site.contact_us.id),
                                       :sanitize => false,
                                       :display_with => lambda { |contactTitle| (contactTitle).html_safe } %>
                </a>
              </h5>
              <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
                                   @site.contact_us,
                                   :content, :type => :textarea,
                                   :path => contact_u_path(@site.contact_us.id),
                                   :sanitize => false,
                                   :display_with => lambda { |contactUsContent| (contactUsContent).html_safe },
                                   :html_attrs => { style: 'width:100%;' }
              %>
            </blockquote>
          </div>
        </div>
        <!--
        <div class="social-icons">
          <a href="#"><i class="icon-twitter"></i></a>
          <a href="#"><i class="icon-facebook"></i></a>
          <a href="#"><i class="icon-google-plus"></i></a>
          <a href="#"><i class="icon-linkedin"></i></a>
          <a href="#"><i class="icon-github"></i></a>
        </div>
        -->
      </div>

    </div> <!-- /row-fluid -->
  </div> <!-- /container -->

</div><!-- /contact -->