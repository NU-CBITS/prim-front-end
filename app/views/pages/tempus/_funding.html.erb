<div class="row-fluid">
  <div class="span12">
    <div class="testimonail wide-testimonial">
      <div class="testimonail-text">
        <blockquote class="text-left">
          <h5 class="title"><a href="#">
            <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
                 @site.funding, :title,
                 :path => funding_path(@site.funding.id),
                 :sanitize => false,
                 :display_with => lambda { |fundingTitle| (fundingTitle).html_safe } %>
          </a></h5>
            <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
                 @site.funding, :content,
                 :type => :textarea,
                 :path => funding_path(@site.funding.id),
                 :sanitize => false,
                 :display_with => lambda { |fundingContent| (fundingContent).html_safe },
                 :html_attrs => { style: 'width:100%;' }%>
        </blockquote>
      </div>
    </div>
  </div> <!-- /span12 -->
</div> <!-- /row-fluid -->