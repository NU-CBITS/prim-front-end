
<div>
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h2>Screening Information for Participant <%= retrieve_user(user_id).external_id %></h2>
  </div>

  <div class="modal-body">
    <div class="divider"></div>
    <div class="screening-question-answer">
      <table class="table">
        <tbody>
        <tr>
          <th>Question</th>
          <th>Response</th>
        </tr>

        <% retrieve_screenings(user_id).each do |screening| %>
          <tr>
            <td><%= screening.question %></td>
            <td><%= screening.answer %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>