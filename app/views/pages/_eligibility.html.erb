<section id="eligibility" class="screenshots text-center">
  <div class="container">
    <h3 class="title">
      <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
                           @site.eligibility,
                           :title, :path => eligibility_path(@site.eligibility.id),
                           :sanitize => false,
                           :display_with => lambda { |eligibilityTitle| (eligibilityTitle).html_safe } %>
    </h3>
    <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
                         @site.eligibility,
                         :content, :type => :textarea,
                         :path => eligibility_path(@site.eligibility.id),
                         :sanitize => false,
                         :display_with => lambda { |eligibilityContent| (eligibilityContent).html_safe },
                         :html_attrs => { :style => 'width:100%;' } %>
  </div><!-- /container -->
</section>