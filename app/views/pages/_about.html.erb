<section id="about" class="steps text-center">
  <div class="container text-left">
    <h3 class="title">
      <%= best_in_place_if (user_signed_in? and current_user.role_id == 1),
                           @site.about, :title,
                           :path => about_path(@site.about.id),
                           :sanitize => false,
                           :display_with => lambda { |aboutTitle| (aboutTitle).html_safe } %>
    </h3>
    <%= best_in_place_if (user_signed_in? and current_user.role_id == 1),
                         @site.about, :content,
                         :type => :textarea,
                         :path => about_path(@site.about.id),
                         :sanitize => false,
                         :display_with => lambda { |aboutContent| (aboutContent).html_safe },
                         :html_attrs => { :style => 'width:100%;' }%>
  </div>
</section>