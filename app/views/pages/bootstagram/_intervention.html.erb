<h2><%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
                         @site.project,
                         :name,
                         path: project_path(@site.project.id),
                         sanitize: false,
                         display_with: lambda { |projectTitle| (projectTitle).html_safe } %>
</h2>
<%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
                     @site.project,
                     :description,
                     type: :textarea,
                     path: project_path(@site.project.id),
                     sanitize: false,
                     display_with: lambda { |projectContent| (projectContent).html_safe },
                     html_attrs: { style: 'width:100%;' } %>
