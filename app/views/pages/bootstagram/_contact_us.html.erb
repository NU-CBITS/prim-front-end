<div id="contact" class="animated fadeIn dealy-8" >
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-12 contact-table">
        <h3 class="contact-table-title">
          <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
               @site.contact_us,
               :title,
               :path => contact_u_path(@site.contact_us.id),
               :sanitize => false,
               :display_with => lambda { |contactTitle| (contactTitle).html_safe } %>
        </h3>
        <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
             @site.contact_us,
             :content, :type => :textarea,
             :path => contact_u_path(@site.contact_us.id),
             :sanitize => false,
             :display_with => lambda { |contactUsContent| (contactUsContent).html_safe },
             :html_attrs => { style: 'width:100%;' }
        %>
      </div>
    </div>
  </div>
</div>
