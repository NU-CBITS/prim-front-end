<div id="quote-block" class="quote" >
  <blockquote >
    <%= best_in_place_if (user_signed_in? and current_user.at_least_a_content_manager?),
         @site.home,
         :content,
         :type => :textarea,
         :path => home_path(@site.home.id),
         :sanitize => false,
         :display_with => lambda { |homeContent| (homeContent).html_safe },
         :html_attrs => { style: 'width:100%;' } %>
  </blockquote>
</div>