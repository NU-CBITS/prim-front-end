<section id="about" class="steps text-center">
  <div class="container text-left user-admin">

    <table class="table table-striped table-hover">
      <tbody>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Consent Date</th>
          <th class="text-center">Future Contact</th>
          <th>Role</th>
          <th>Consent Version</th>
          <th>Status</th>
          <th>Screening</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td class="text-center"><%= user.created_at.strftime("%m/%d/%Y") %></td>
            <td class="text-center"><% if user.future_contact?  %>
                  <span class="glyphicon glyphicon-check" style="color:green"></span>
                <% else %>
                  <span class="glyphicon glyphicon-minus-sign" style="color:red"></span>
                <% end %>
            </td>
            <td><%= user.role_name %></td>
            <td class="text-center">
              <% if !user.at_least_a_content_manager? %>
                <%= render_user_consent_view(@site.id, user.id) %>
              <% else %>
                ---
              <% end %>
            </td>
            <td class="text-center">
              <% if user.status %>
                  <%= user.status.name %>
              <% else %>
                ---
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <section class="modal fade custom large-modal" id="user-consent-modal-window" role="dialog"  aria-labelledby="userConsentModal" aria-hidden="true" ></section>

    <button type="button" class="btn btn-danger btn-lg btn-user-export">
      <%= link_to 'Export to CSV', user_admin_path(:format => :csv)%>
    </button>

  </div>
</section>

<script>
    $(document).ready(function() {
        jQuery(".best_in_place").best_in_place();
    });
</script>