<div class="navbar-default navbar-static-top">

  <div class="modal custom fade" id="loginModal">

    <div class="modal-header">
      <button class="close" data-dismiss="modal">Ã—</button>
      <h3>Sign In</h3>
    </div>

    <div class="modal-body">
      <%= simple_form_for(:user, :url => user_session_path) do |f| %>
          <div class="inputs">
            <%= f.input :email, :required => false, :autofocus => true %>
            <%= f.input :password, :required => false %>
            <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
    <div class="modal-footer">
       <%= f.button :submit, "sign in", :class => 'btn btn-primary' %>
    <% end %>
    </div>

  </div>

  <div class="container">

    <div class="navbar-header">
      <a href="/" class="navbar-brand">MACs</a>
      <!--TODO Add variable for brand/site name.-->

      <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse navHeaderCollapse">
      <ul class="nav navbar-nav navbar-right">

        <li <%= "index" == @current_page ? "class=active" : "" %>><a href="/about/">about</a></li>
        <li <%= "eligibility" == @current_page ? "class=active" : "" %>><a href="/eligibility">eligibility</a></li>
        <li <%= "resources" == @current_page ? "class=active" : "" %>><a href="/resources">resources</a></li>
        <li <%= "funding" == @current_page ? "class=active" : "" %>><a href="/funding">funding info</a></li>
        <li <%= "contact" == @current_page ? "class=active" : "" %>><a href="/contact">contact us</a></li>

        <% if !user_signed_in? %>
            <%= render "shared/sign_up_navbar" %>
        <% else %>
            <%= render "shared/authorized_navbar" %>
        <% end %>

      </ul>
    </div>

  </div>
</div>