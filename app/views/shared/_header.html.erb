<div class="navbar-default navbar-static-top">

  <div class="modal custom fade" id="loginModal">

    <div class="modal-header">
      <button class="close" data-dismiss="modal">Ã—</button>
      <h3>Sign In</h3>
    </div>

    <div class="modal-body">
      <%= simple_form_for(:user, :url => "/sites/1/users/sign_up") do |f| %>
          <div class="inputs">
            <%= f.input :email, :required => false, :autofocus => true %>
            <%= f.input :password, :required => false %>
            <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
    <div class="modal-footer">
       <%= f.button :submit, "sign in", :class => 'btn btn-primary' %>
    <% end %>
    </div>

  </div>

  <div class="container">

    <div class="navbar-header">
      <%= link_to 'MACs',        (site_path(@site) + "/pages/home"), :class => "navbar-brand" %>
      <!--TODO Add variable for brand/site name.-->

      <button class="navbar-toggle" data-toggle="collapse" data-target=".navHeaderCollapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    </div>

    <div class="collapse navbar-collapse navHeaderCollapse">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'about',        (site_path(@site) + "/pages/about")         %></li>
        <li><%= link_to 'eligibility',  (site_path(@site) + "/pages/eligibility")   %></li>
        <li><%= link_to 'resources',    (site_path(@site) + "/pages/resources")     %></li>
        <li><%= link_to 'funding',      (site_path(@site) + "/pages/funding")       %></li>
        <li><%= link_to 'contact us',   (site_path(@site) + "/pages/contact_us")    %></li>

        <% if !user_signed_in? %>
            <%= render "shared/sign_up_navbar" %>
        <% else %>
            <%= render "shared/authorized_navbar" %>
        <% end %>
      </ul>
    </div>

  </div>
</div>