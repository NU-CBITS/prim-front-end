<header id="header" class="header red-ribbon">

    <div class="modal custom fade" id="loginModal">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">Ã—</button>
        <h3>Sign In</h3>
      </div>
      <div class="modal-body">
        <%= simple_form_for(:user, :url => "/sites/1/users/sign_in", :method => 'post') do |f| %>
        <div class="inputs">
          <%= f.input :email, :required => false, :autofocus => true %>
          <%= f.input :password, :required => false %>
          <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.button :submit, "sign in", :class => 'btn btn-primary' %>
      <% end %>
      </div>
    </div>

  <!-- Modal Danger -->
  <div class="modal fade modal-hmcf modal-danger" id="modalDanger" tabindex="-1" role="dialog" aria-labelledby="modalDangerLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><i class="fa fa-times-circle-o"></i></button>
          <div class="row">
            <div class="col-sm-4">
              <i class="fa fa-comments icon"></i>
            </div> <!-- /.col-sm-6 -->
            <div class="col-sm-8">
              <h4 class="modal-title" id="modalDangerLabel">Drop us a line</h4>
              <p>Have any questions or concerns?</p>
              <address>
                <strong>Division of Infectious Diseases</strong><br>
                <strong>Feinberg School of Medicine</strong><br>
                Steven Wolinsky, MD<br>
                645 N Michigan Ave, Suite 900<br>
                Chicago, IL 60666<br>
                <abbr title="Phone">P:</abbr> (312) 695-5088<br>
                <a href="mailto:s-galvin@northwestern.edu" target="_top">s-galvin@northwestern.edu</a>
              </address>
            </div> <!-- /.col-sm-6 -->
          </div> <!-- /.row -->
        </div> <!-- /.modal-header -->
      </div> <!-- /.modal-content -->
    </div> <!-- /.modal-dialog -->
  </div> <!-- /.modal -->

