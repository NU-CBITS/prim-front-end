<div>
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h2>Update Image</h2>
  </div>
  <div class="modal-body">

    <div id="image_view">
      <%= image_tag retrieve_site_image_by_position(@site.id, position).image.url(:medium) %>
    </div>

    <%= form_for [@site, retrieve_site_image_by_position(@site.id, position)], :html => { :multipart => true } do |form| %>
      <%= form.hidden_field :position, value: position %>
      <%= form.hidden_field :site_id %>

      <div class="input-group">
        <span class="input-group-btn">
          <span class="btn  btn-danger btn-file">
            Choose Image
            <%= form.file_field :image, class: 'image_input' %>
          </span>
        </span>
        <input type="text" class="form-control" readonly="">
      </div>
  </div>
  <div class="modal-footer">
        <button class='btn btn-danger pull-left' onclick="$('.edit_site_image').submit();$('.new_site_image').submit();">Save Image</button>
        <button class="btn btn-warning pull-right" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
  <% end %>
</div>

<script>
    $(document).on('change', '.btn-file :file', function() {
        var input = $(this),
        numFiles = input.get(0).files ? input.get(0).files.length : 1,
        label = input.val().replace(/\\/g, '/').replace(/.*\//, '');
        input.trigger('fileselect', [numFiles, label]);
    });

    $(document).ready(function() {
        $('.btn-file :file').on('fileselect', function(event, numFiles, label) {
        var input = $(this).parents('.input-group').find(':text'),
        log = numFiles > 1 ? numFiles + ' files selected' : label;
        if( input.length ) { input.val(log); } else if( log )  { alert(log); }
        });
    });
</script>
