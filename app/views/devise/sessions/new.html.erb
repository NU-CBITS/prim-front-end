<div class="container sign-in-container">

  <div class="divider"></div>

  <section class="register text-left">
    <div class="container">
      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <h2>Sign in</h2>

          <div class="form-inputs">
            <%= f.input :email, :required => false, :autofocus => true %>
            <%= f.input :password, :required => false %>
            <%= f.input :remember_me, :as => :boolean,  :label => false, :inline_label => true if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign in", :class => "btn btn-danger"%>
          </div>
      <% end %>
    </div>
  </section>

  <div class="divider"></div>
  <div class="sign-in-button-group">
    <%= render "devise/shared/links" %>
  </div>
</div>


